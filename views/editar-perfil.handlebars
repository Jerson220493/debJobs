<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" value="{{usuario.nombre}}" name="nombre" placeholder="Tu Nombre" required>
        </div>
        <div class="campo">
            <label for="email">E-mail</label>
            <input type="text" value="{{usuario.email}}" name="email" placeholder="Tu Email" required>
        </div>
        <div class="campo">
            <label for="password">Password</label>
            <input type="password" name="password" placeholder="Tu Password">
        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar Cambios">
        </div>
    </form>
</main>