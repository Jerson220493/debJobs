<main class="contenedor">
    <form action="/vacantes/nueva" class="default-form" method="POST">
        <h3>Información general</h3>
        <div class="campo">
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" id="titulo" placeholder="Ej: React-Developmet" required>
        </div>
        <div class="campo">
            <label for="empresa">Empresa</label>
            <input type="text" name="empresa" id="empresa" placeholder="Ej: Empresa contrata" required>
        </div>
        <div class="campo">
            <label for="ubicacion">Ubicación</label>
            <input type="text" name="ubicacion" id="ubicacion" placeholder="Ej: Mexico o remoto" required>
        </div>
        <div class="campo">
            <label for="salario">Salario (USD)</label>
            <input type="text" name="salario" id="salario" placeholder="Ej: 500 USD" required>
        </div>
        <div class="campo">
            <label for="contrato">Contrato</label>
            <select name="contrato">
                <option value="" disabled selected>-- Selecciona --</option>
                <option value="Freelance">Freelance</option>
                <option value="Tiempo Completo">Tiempo Completo</option>
                <option value="Medio Tiempo">Medio Tiempo</option>
                <option value="Por Proyecto">Por Proyecto</option>
            </select>
        </div>
        <h3>DESCRIPCIÓN DEL PUESTO</h3>

        <div class="campo descripcion">
            <label>Descripción</label>
            <input type="hidden" id="x" name="descripcion" >
            <trix-editor input="x">

            </trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills a}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="submit" value ="Publicar" class="btn btn-azul">
        </div>

    </form>
</main>